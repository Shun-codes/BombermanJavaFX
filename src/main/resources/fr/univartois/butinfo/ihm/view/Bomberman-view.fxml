<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.ihm.controller.BombermanController">
    
    <!-- Overlay arcade style en arriÃ¨re-plan -->
    <ImageView fx:id="myImageView" fitHeight="800" fitWidth="1400" pickOnBounds="false" preserveRatio="false" />

<BorderPane prefHeight="640.0" prefWidth="716.0">
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane fx:id="carteTerrain" alignment="CENTER">
            </GridPane>
            <GridPane fx:id="cartePerso" alignment="CENTER">
            </GridPane>
         </children>
      </StackPane>
   </center>
   <top>
      <HBox alignment="CENTER" maxWidth="750.0" prefHeight="40.0" prefWidth="273.0" spacing="10" BorderPane.alignment="CENTER">
    
    <children>
               <Label fx:id="levelLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Level : ">
    <HBox.margin>
        <Insets right="10.0" />
    </HBox.margin>
</Label>

        <Label fx:id="lives" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Vie :">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
                  <padding>
                     <Insets left="20.0" />
                  </padding>
        </Label>

        <ImageView fx:id="coeur1" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
        <ImageView fx:id="coeur2" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
        <ImageView fx:id="coeur3" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />

        <ImageView fx:id="bomb" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin></ImageView>

        <Label fx:id="nbBombes" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="0">
            <HBox.margin>
                <Insets left="5.0" />
            </HBox.margin>
        </Label>
               <Label fx:id="score" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Score : 0">
    <HBox.margin>
        <Insets left="20.0" />
    </HBox.margin>
</Label>
               <Label fx:id="highScore" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="High Score : 0">
    <HBox.margin>
        <Insets left="20.0" />
    </HBox.margin>
</Label>


    </children>

    <BorderPane.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </BorderPane.margin>
</HBox>

   </top>
   <bottom>
      <HBox alignment="CENTER" maxWidth="500.0" prefHeight="100.0" prefWidth="200.0" spacing="20" BorderPane.alignment="CENTER">
    	<children>
        	<Button focusTraversable="false" mnemonicParsing="false" onAction="#onRestart" prefWidth="128.0" style="-fx-background-color: linear-gradient(#ffca28, #f57c00);                        -fx-text-fill: white;                        -fx-font-weight: bold;                        -fx-background-radius: 10;                        -fx-padding: 8 16;                        -fx-font-size: 14px;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4, 0, 0, 2);" text="Restart" />

        	<Button focusTraversable="false" mnemonicParsing="false" onAction="#onInventaire" prefWidth="128.0" style="-fx-background-color: linear-gradient(#64b5f6, #1976d2);                        -fx-text-fill: white;                        -fx-font-weight: bold;                        -fx-background-radius: 10;                        -fx-padding: 8 16;                        -fx-font-size: 14px;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4, 0, 0, 2);" text="Inventaire" />
    		</children>
		</HBox>
   </bottom>
</BorderPane>

</StackPane>
